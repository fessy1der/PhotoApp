@model  PhotoApp.Models.PhotoDetailModel

<div class="container body-content">
    <div class="row photo-detail-container">
        <div class="photo-detail">
            <img src="@Model.Url" alt="@Model.Title" />
        </div>
    </div>
    <div class="row photo-detail-meta">
        <span>Title: @Model.Title</span>
        <span>Upload: @Model.Created</span>
    </div>
    <div class="row controls">
        <a class="btn btn-primary" asp-controller="Photo" asp-action="Index">
            Go Back
        </a>
    </div>
</div>